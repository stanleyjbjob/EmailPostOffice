@page
@using Microsoft.AspNetCore.Mvc.Localization
@using EmailPostOffice.Localization
@using EmailPostOffice.Web.Pages.MailQueues
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using EmailPostOffice.MailQueues;
@using System.Globalization
@inject IHtmlLocalizer<EmailPostOfficeResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/MailQueues/EditModal" autocomplete="off">
    <abp-modal id="MailQueueEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="MailQueue.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    
            <abp-input asp-for="MailQueue.Recipient"/>

            <abp-input asp-for="MailQueue.RecipientName"/>

            <abp-input asp-for="MailQueue.Sender"/>

            <abp-input asp-for="MailQueue.SenderName"/>

            <abp-input asp-for="MailQueue.Subject"/>

            <abp-input asp-for="MailQueue.Content"/>

            <abp-input asp-for="MailQueue.Retry"/>

            <abp-input asp-for="MailQueue.Success"/>

            <abp-input asp-for="MailQueue.Suspend"/>

            <abp-input asp-for="MailQueue.FreezeTime" value="@(Model.MailQueue.FreezeTime.ToString("yyyy-MM-dd"))" type="date"/>

                    
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>